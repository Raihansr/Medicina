<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_Too_Large"
        android:background="@drawable/shape_rect_round_dialog">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_Medium"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_Too_Large"
                android:layout_marginBottom="@dimen/margin_Large"
                app:cardCornerRadius="@dimen/card_Radius_Large"
                app:cardElevation="@dimen/card_Elevation_Small"
                app:cardBackgroundColor="@color/color_transparent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_rect_round_dialog"
                    tools:ignore="UselessParent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/medicine_type_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape_bottom_round_dialog"
                        android:paddingStart="@dimen/padding_Too_Large"
                        android:paddingEnd="@dimen/padding_Too_Large"
                        android:paddingTop="@dimen/padding_Too_Small"
                        android:paddingBottom="@dimen/padding_Too_Small"
                        android:textStyle="bold"
                        android:textColorHint="@color/colorHint"
                        android:fontFamily="serif-monospace"
                        android:textSize="@dimen/text_Size_Default"
                        tools:ignore="HardcodedText,LabelFor" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/button_Height"
                        android:paddingTop="@dimen/padding_Small"
                        android:paddingBottom="@dimen/padding_Medium"
                        android:paddingStart="@dimen/padding_Medium"
                        android:paddingEnd="@dimen/padding_Medium"
                        android:gravity="center_vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/medicine_name_content_tv"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|start"
                            android:padding="@dimen/padding_Small"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"
                            android:textSize="@dimen/text_Size_Medium"
                            tools:ignore="HardcodedText,LabelFor" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/medicine_power_content_tv"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|end"
                            android:padding="@dimen/padding_Small"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"
                            android:textSize="@dimen/text_Size_Medium"
                            tools:ignore="HardcodedText,LabelFor" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_Large"
                app:cardCornerRadius="@dimen/card_Radius_Large"
                app:cardElevation="@dimen/card_Elevation_Small"
                app:cardBackgroundColor="@color/color_transparent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_rect_round_dialog"
                    tools:ignore="UselessParent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/medicine_timing_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape_bottom_round_dialog"
                        android:paddingStart="@dimen/padding_Too_Large"
                        android:paddingEnd="@dimen/padding_Too_Large"
                        android:paddingTop="@dimen/padding_Too_Small"
                        android:paddingBottom="@dimen/padding_Too_Small"
                        android:textStyle="bold"
                        android:hint="Timing"
                        android:textColorHint="@color/colorHint"
                        android:fontFamily="serif-monospace"
                        android:textSize="@dimen/text_Size_Default"
                        tools:ignore="HardcodedText,LabelFor" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/button_Height"
                        android:paddingTop="@dimen/padding_Small"
                        android:paddingBottom="@dimen/padding_Medium"
                        android:paddingStart="@dimen/padding_Medium"
                        android:paddingEnd="@dimen/padding_Medium"
                        android:gravity="center_vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/medicine_time_content_tv"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|start"
                            android:padding="@dimen/padding_Small"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"
                            android:textSize="@dimen/text_Size_Medium"
                            tools:ignore="HardcodedText,LabelFor" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/medicine_reminder_Icon"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            tools:ignore="ContentDescription" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/medicine_shift_content_tv"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|end"
                            android:padding="@dimen/padding_Small"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"
                            android:textSize="@dimen/text_Size_Medium"
                            tools:ignore="HardcodedText,LabelFor" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/card_Radius_Large"
                app:cardElevation="@dimen/card_Elevation_Small"
                app:cardBackgroundColor="@color/color_transparent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_rect_round_dialog"
                    tools:ignore="UselessParent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/medicine_notes_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape_bottom_round_dialog"
                        android:paddingStart="@dimen/padding_Too_Large"
                        android:paddingEnd="@dimen/padding_Too_Large"
                        android:paddingTop="@dimen/padding_Too_Small"
                        android:paddingBottom="@dimen/padding_Too_Small"
                        android:textStyle="bold"
                        android:hint="Notes"
                        android:textColorHint="@color/colorHint"
                        android:fontFamily="serif-monospace"
                        android:textSize="@dimen/text_Size_Default"
                        tools:ignore="HardcodedText,LabelFor" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/medicine_notes_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/button_Height"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_Small"
                        android:paddingBottom="@dimen/padding_Medium"
                        android:paddingStart="@dimen/padding_Medium"
                        android:paddingEnd="@dimen/padding_Medium"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:fontFamily="serif-monospace"
                        android:textSize="@dimen/text_Size_Medium"
                        tools:ignore="HardcodedText,LabelFor" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/cancel_dialog_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/padding_Too_Small"
        android:background="@drawable/shape_rect_round"
        app:srcCompat="@drawable/ic_cancel"
        tools:ignore="ContentDescription" />

</RelativeLayout>