<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/medicine_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minHeight="@dimen/_120sdp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/et_Margin">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_Height"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_Large"
                android:paddingEnd="@dimen/padding_Large"
                android:background="@drawable/shape_curve_top">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/medicine_type"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_Size_Medium"
                    android:maxLines="2"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/medicine_time"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_Size_Small"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/medicine_alarm"
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:visibility="gone"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:textSize="@dimen/text_Size_Extra_Small"
                    android:textColor="@color/colorBlack"/>

                <View
                    android:layout_weight=".01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/medicine_shift"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="@dimen/text_Size_Small"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />


            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_Height"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_Too_Large"
                android:paddingEnd="@dimen/padding_Too_Small"
                android:paddingTop="@dimen/padding_Too_Small"
                android:paddingBottom="@dimen/padding_Too_Small"
                android:background="@color/color_transparent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/medicine_name"
                    android:layout_weight="4.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:textSize="@dimen/text_Size_Small"
                    android:maxLines="2"
                    android:layout_marginEnd="@dimen/margin_Small"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <View
                    android:layout_weight=".025"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/medicine_power"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:textSize="@dimen/text_Size_Small"
                    android:maxLines="2"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/medicine_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_Height"
                android:background="@drawable/shape_curve_bottom"
                android:maxLines="3"
                android:paddingStart="@dimen/padding_Too_Large"
                android:paddingEnd="@dimen/padding_Small"
                android:paddingTop="@dimen/padding_Too_Small"
                android:paddingBottom="@dimen/padding_Too_Small"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:textSize="@dimen/text_Size_Extra_Small"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_64sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_Too_Large"
            android:background="@drawable/shape_round"
            app:srcCompat="@drawable/ic_tablet"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>